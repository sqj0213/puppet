/data/mysql_3306/data/*.gexing.com.err
/data/mysql_3306/data/*slow.log
{
        # create 600 mysql mysql
        notifempty
        daily
        rotate 30
        missingok
        compress
    postrotate
        # just if mysqld is really running
        if test -x /usr/bin/mysqladmin && \
           /usr/bin/mysqladmin -S /data/mysql_3306/mysql.sock ping &>/dev/null
        then
           /usr/bin/mysqladmin -S /data/mysql_3306/mysql.sock flush-logs
        fi
    endscript
}

